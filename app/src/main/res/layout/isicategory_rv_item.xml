<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_white"
        android:elevation="5dp"
        android:padding="10dp"
        app:layout_constraintWidth_percent=".9"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_obat"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="20dp"
            android:elevation="10dp"
            android:src="@drawable/kapsul"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_obat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Obat"
            android:textColor="@color/blue_main"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toTopOf="@id/harga_obat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
           />

        <TextView
            android:id="@+id/harga_obat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harga Obat"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:textColor="@color/blue_main"
            app:layout_constraintBottom_toTopOf="@id/tv_kategori_obat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />


        <TextView
            android:id="@+id/tv_kategori_obat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Kategori Obat"
            android:textColor="@color/blue_main"
            android:textSize="16sp"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toTopOf="@id/tv_netto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tv_netto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Netto"
            android:textColor="@color/blue_main"
            android:textSize="16sp"
            android:textStyle="italic"

            app:layout_constraintBottom_toTopOf="@id/tv_deksripsi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_deksripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Membuka kapsul berisiko memengaruhi kinerja obat dan menimbulkan efek samping tertentu."
            android:textColor="@color/blue_main"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>